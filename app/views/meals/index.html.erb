<div class = "d-flex flex-column cont">
    <div class = "img">
        <div class = "escurinho">
            <div class = "whi">dinnerdash</div>
            <span class = "top-right"><span class = "top-r yellow">backoffice</span><span class = "top-r">perfil</span><span class = "top-r">sair</span></span>
            <div class = "Back">Backoffice</div>
            <div class = "ger">Gerencie pedidos, refeições e mais</div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark nav">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav nav_meal">
                <span class="nav-item nav-link" href="#">Pedidos <span class="sr-only">(current)</span></span>
                <span class="nav-item nav-link " href="#">Usuários</span>
                <span class="nav-item nav-link active" href="#">Refeições</span>
                <span class="nav-item " href="#"><%= link_to  "Categorias de Refeição", categories_path, class: "nav-link" %></span>
            </div>
        </div>
    </nav>
    <h1 class = "category_name"></h1>
    <div class = "container">
        <div class = "d-flex flex-row contain">	
            <%@meals.each do |meal|%>
                    <div class="card cards">
                    <%= image_tag(meal.image, class: "card-img-top")%>
                        <% if(meal.available == FALSE) %>
                            <div class = "card-img-overlay black d-flex align-items-center justify-content-center">
                                
                                <h5>
                                    refeição indisponivel
                                </h5>

                            </div>
                        <%end%>
                        <div class = "card-img-overlay d-flex align-items-center over">
                            <h6 class="card-title meal_name"><span class = "espaco_name"><%= meal.name %></span></h6>
                        </div>
                        <div class="card-body">
                            <h5 class="card-text description"><%= meal.description %></h5>
                            <h5>R<%=number_to_currency(meal.price) %> por porção </h5>
                            <div class = "d-flex flex-row justify-content-between flex_bot">
                                <%= button_to  "editar", edit_meal_path(meal), :method => "get", class: "btn btn-warning botoes_ref" %> <%= button_to  "excluir", meal, method: :delete, data: { confirm: 'você tem certeza?'}, class: "btn btn-danger botoes_ref"  %>
                            </div>
                        </div>
                    </div>
            <% end %>
        </div>

        <%= button_to "criar nova refeição", new_meal_path, :method => "get", class: "btn btn-success" %>
	</div>
    <div class = "footer fot">
        <span class = "fotd">dinnerdash | todos os direitos reservados</span><span class = "develop">Design por Yuri Silva, Backend por Bruno Sanguinetti</span>
    </div>
</div>
