<div class = "d-flex flex-column cont">
    <div class = "img">
        <div class = "escurinho">
            <div class = "whi">dinnerdash</div>
            <span class = "top-right"><span class = "top-r yellow">backoffice</span><span class = "top-r">perfil</span><span class = "top-r">sair</span></span>
            <div class = "Back">Backoffice</div>
            <div class = "ger">Gerencie pedidos, refeições e mais</div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark nav">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <span class="nav-item nav-link" href="#">Pedidos <span class="sr-only">(current)</span></span>
                <span class="nav-item nav-link " href="#">Usuários</span>
                <span class="nav-item nav-link active" href="#">Refeições</span>
                <span class="nav-item " href="#"><%= link_to  "Categorias de Refeição", categories_path, class: "nav-link" %>
            </div>
        </div>
    </nav>
    <br>
    <div class = "container-fluid form tab">
		<div class ="new_cat">Nova refeição</div>
        <%= form_with model: @meal do |form| %>
      <label class = "labels">Nome</label>
      <div class ="input"><%= form.text_field :name%></div>
      <label class = "labels">Descrição</label>
      <div class ="input"><%= form.text_field :description%></div>
      <label class = "labels">Categoria</label>
      <div class = "labels"><%= form.select :category_id, @categories.collect { |category| [category.name, category.id] }%></div>
      <label class = "labels">Preço</label>
      <div class ="input"><%= form.text_field :price%></div>
      <label class = "labels">Imagem</label>
      <div class ="input"><%= form.file_field :image%></div>
      <label class = "labels">Disponibilidade</label>
      <div class ="input"><%= form.check_box :available%></div>
      

			<button class = "btn btn-success botao space"><% form.submit %>criar refeição</button><button class = "btn botao voltar"><%= link_to  "voltar", meals_path %> </button>
        <% end %>
    </div>

    <div class = "footer fot">
        <span class = "fotd">dinnerdash | todos os direitos reservados</span><span class = "develop">Design por Yuri Silva, Backend por Bruno Sanguinetti</span>
    </div>
</div>