<% session[:cart] ||= [] %>
<%= render  "painel_homes" %>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<div class="container font">
	<%@categories.each do |category| %>
		<% i = quantidade(category) %>
		<% if i > 0 %>
			<h1 class = "category_name"><b><%=category.name%><b></h1>
			<div class = "d-flex flex-row contain">	
				<%@meals.each do |meal|%>
					<%if(meal.category_id == category.id)%>
						<div class="card cards ">
							<%= image_tag(meal.image, class: "card-img-top img_certa")%>
							<div class = "card-img-overlay over ">
								<h6 class="card-title meal_name">
									<span class = "espaco_name"><%= meal.name %></span>
								</h6>
							</div>
							<div class="card-body position-relative">
								<h5 class="card-text description position-relative"><%= meal.description %></h5>
								<h5 class="text-success">R<%=number_to_currency(meal.price) %> por porção </h5>
								<div class="form-group">
									<label for="exampleFormControlSelect1">Quantidade</label>
									<select class="form-control" id="exampleFormControlSelect1">
										<% i = 1 %>
										<% 10.times do %>
											<option><%= i %></option>
											<% i+= 1 %>
										<% end %>	
									</select>
							    </div>
								<a href="#" class="btn btn-success justify-content-center d-flex">Adicionar ao carrinho</a>
							</div>
						</div>
					<% end %>
				<% end %>
		<% end %>
		</div>
	<% end %>
</div>
<hr>
<div class="container font">
	<h2 class="">Finalizou seu pedido?</h2>
	<h5 class="">Confira os itens adicionados ao carrinho antes de finalizar.</h5>
	<div class="card card_checkout_box flex-wrap">
		<div class="card-body d-flex flex-wrap justify-content-around">
			<div class="d-flex">
				<p>IMG</p>
			</div>
			<div class="flex-column">
				<h4>*NOME DO PRATO*</h4>
				<p class="margin_cart_text">Quantidade:</p>
				<p class="margin_cart_text">Preço unitário:</p>
				<p class="margin_cart_text">Preço total:</p>
			</div>
			<div class="form-group flex_column">
				<label for="exampleFormControlSelect1">Quantidade:</label>
				<select class="form-control max_form" id="exampleFormControlSelect1">
				<% i = 1 %>
				<% 5.times do %>
					<option><%= i %></option>
					<% i+= 1 %>
				<% end %>
				</select>
				<button type="button" class="btn btn-outline-danger button_size mt-1">Remover</button>
			</div>
		</div>
	</div>
	<button type="button" class="btn btn-success mt-3">Finalizar pedido</button>
</div>
